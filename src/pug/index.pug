    include page/bbcode
    include page/color
    include page/doodle
    include page/shows
    include page/account
    include page/about
    include page/login
    include page/tutorial
    include page/qrcode

    include emoji_picker
    include alerts
    script#toot_full_tmpl(type='text/html')
      include tmpl/toot
    script#account_card_tmpl(type='text/html')
      include tmpl/account
    script#radio_tmpl(type='text/html')
      include tmpl/radio
